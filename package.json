{
  "name": "string-case-utils",
  "version": "1.0.0",
  "description": "Universal TypeScript utility for converting string naming styles (camelCase, snake_case, kebab-case, PascalCase) and object keys with prefix/suffix handling. Works in Node.js, browsers, and Vue 3.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/string-case-utils.min.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "browser": "./dist/umd/string-case-utils.min.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "README.zh.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:umd && npm run build:types && npm run post-build",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:umd": "webpack --config webpack.config.js",
    "build:types": "tsc -p tsconfig.types.json",
    "post-build": "node scripts/post-build.mjs",
    "test": "node ./test/test.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "prepack": "npm run build",
    "publish:npm": "npm publish",
    "publish:dry": "npm publish --dry-run"
  },
  "keywords": [
    "string",
    "case",
    "camelCase",
    "snake_case",
    "kebab-case",
    "PascalCase",
    "typescript",
    "utility",
    "converter",
    "object-keys",
    "naming-convention",
    "vue3",
    "browser",
    "nodejs",
    "esm",
    "commonjs",
    "umd"
  ],
  "author": "菜鸟东子",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/string-case-utils.git"
  },
  "homepage": "https://github.com/yourusername/string-case-utils#readme",
  "bugs": {
    "url": "https://github.com/yourusername/string-case-utils/issues"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.4.0"
  }
}